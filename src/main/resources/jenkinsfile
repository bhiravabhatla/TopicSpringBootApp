pipeline {
    agent any

    tools {
        maven 'maven'
    }

    parameters {
        string(name: 'tomcat_dev', defaultValue: 'localhost', description: 'Staging Server')
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: 'target/*.war'
                }
            }
        }

        stage('Deploy') {


            steps {
                sh "cp target/*.war /Users/bsantosh/Downloads/apache-tomcat-8.5.31/webapps"
            }


        }
    }
}
